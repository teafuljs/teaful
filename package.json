{
  "name": "fragstore",
  "version": "0.6.0-canary.2",
  "description": "Tiny, easy and powerful React state management (less than 1kb)",
  "license": "MIT",
  "keywords": [
    "react",
    "preact",
    "state",
    "state management",
    "store",
    "javascript"
  ],
  "author": {
    "name": "Aral Roca GÃ²mez",
    "email": "contact@aralroca.com"
  },
  "files": [
    "dist",
    "package"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aralroca/fragstore.git"
  },
  "source": "package/index.js",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.js"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./dist/index.js",
        "maxSize": "1 kB"
      },
      {
        "path": "./dist/index.modern.js",
        "maxSize": "1 kB"
      },
      {
        "path": "./dist/index.m.js",
        "maxSize": "1 kB"
      },
      {
        "path": "./dist/index.umd.js",
        "maxSize": "1 kB"
      }
    ]
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint ./package ./tests",
    "format": "eslint --fix ./package ./tests",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "microbundle --jsx React.createElement",
    "dev": "microbundle watch",
    "prepublish": "yarn build"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.15.8",
    "@babel/preset-react": "7.14.5",
    "@testing-library/dom": "8.9.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.4.1",
    "babel-jest": "27.2.5",
    "bundlewatch": "0.3.2",
    "eslint": "7.32.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "4.12.4",
    "jest": "27.2.5",
    "microbundle": "0.14.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2"
  },
  "mangle": {
    "regex": "^_"
  },
  "bugs": "https://github.com/aralroca/fragstore/issues"
}
